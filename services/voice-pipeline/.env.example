# Voice Pipeline Service Configuration

# Service
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8765
SERVICE_WORKERS=1

# Whisper Configuration
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large, large-v2, large-v3
WHISPER_DEVICE=cpu  # cpu or cuda
WHISPER_COMPUTE_TYPE=int8  # int8 (CPU) or float16 (GPU)

# TTS Configuration (when XTTS is implemented)
TTS_MODEL=xtts_v2
TTS_DEVICE=cpu  # cpu or cuda
TTS_SAMPLE_RATE=22050

# Supported Languages
SUPPORTED_LANGUAGES=en,de,fr,es,it,pt,nl,pl,ru,ja,zh

# Voice Profiles
VOICE_PROFILES_DIR=./voice_profiles

# Models Cache
MODELS_CACHE_DIR=./models

# Performance
MAX_AUDIO_LENGTH_SECONDS=300
TRANSCRIPTION_TIMEOUT=60
SYNTHESIS_TIMEOUT=30

# GPU (when available)
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512
